<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModel="clr-namespace:Main.ViewModel"
                    xmlns:ClassLib="clr-namespace:ClassIerarchyLib;assembly=ClassIerarchyLib">

    <DataTemplate DataType="{x:Type ClassLib:Person}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Row="0" Text="{Binding Key, StringFormat='{}Key: {0}'}" FontWeight="Bold" IsReadOnly="True"
                     Background="#324A5F"
                     BorderBrush="#324A5F"
                     Foreground="#FAFFFD"
                     Padding="5 5 0 5"
                     Height="35"/>
            <TextBlock Grid.Row="1" Text="{Binding Name, StringFormat='{}Name: {0}'}" FontSize="14"
                     Background="#ADE5FF"
                     Foreground="#342E37"
                     Padding="10 5 0 5"
                     FontFamily="Arial Rounded MT Bold"/>
            <TextBlock Grid.Row="2" Text="{Binding Age, StringFormat='{}Age: {0}'}" FontSize="14"
                     Background="#ADE5FF"
                     Foreground="#342E37"
                     Padding="10 5 0 5"
                     FontFamily="Arial Rounded MT Bold"/>
            <TextBlock Grid.Row="3" Text="{Binding Residence, StringFormat='{}Residence: {0}'}" FontSize="14"
                     Background="#ADE5FF"
                     Foreground="#342E37"
                     Padding="10 5 0 5"
                     FontFamily="Arial Rounded MT Bold"/>
        </Grid>
    </DataTemplate>


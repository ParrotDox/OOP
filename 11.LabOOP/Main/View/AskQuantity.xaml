<Window x:Class="Main.View.AskQuantity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main.View"
        mc:Ignorable="d"
        Title="AskQuantity" Height="150" Width="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <Label Content="How many elements to add?"/>
            <TextBox Text="{Binding Input}"/>
            <Button x:Name="ConfirmButton" Width="100" Height="30" Content="Confirm" Click="ConfirmButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

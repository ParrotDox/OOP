<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        Title="Collection App" Height="500" Width="700">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>
    <Grid>
        <!--2-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--11-->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--Row:0 | Column 0-1 HEADER/TOOLBAR-->
        <ToolBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            
        </ToolBar>
        <!--Row: 1 | Column: 0-1 LABELS-->
        <Label Grid.Row="1" Grid.Column="0" Content="Options"/>
        <Label Grid.Row="1" Grid.Column="1" Content="Collection"/>
        <!--Row: 2 | Column: 0 BUTTONS-->
        <Grid Grid.Row="2" Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Choose collection"/>
            <Button Grid.Row="1" Content="Create auto colleciton"/>
            <Button Grid.Row="2" Content="Add unit"/>
            <Button Grid.Row="3" Content="Change unit"/>
            <Button Grid.Row="4" Content="Delete unit"/>
            <Button Grid.Row="5" Content="Find unit(s) by"/>
            <Button Grid.Row="6" Content="Check journal"/>
        </Grid>
        <!--Row: 3 | Column: 0 LABELS-->
        <Label Grid.Row="3" Grid.Column="0" Content="Journal"/>
        <!--Row: 4 | Column: 0 JOURNAL LISTBOX-->
        <ListBox Grid.Row="4" Grid.Column="0" Margin="5">
            
        </ListBox>
        <!--Row: 2 | Column: 1 COLLECTION LISTBOX-->
        <ListBox Grid.Row="2" Grid.Column="1" Grid.RowSpan="3" Margin="5">
            
        </ListBox>
    </Grid>
</Window>
